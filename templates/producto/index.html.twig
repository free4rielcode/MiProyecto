{% extends 'base.html.twig' %}

{% block title %}Gestionar Producto
{% endblock %}

{% block contenido %}

	<h1 class"float-">Gestionar Productos</h1>
	<button class="boton_crear_producto btn btn-secondary mb-2 float-end">
		<a href="{{ path('app_producto_categoria') }}">Agregar Categoria</a><br>
	</button>

	<h2>Categorías Creadas</h2>
	<table class="table table-striped table-bordered table-hover mb-4 table-sm text-center ">
		<thead>
			<tr>
				<th>Nombre</th>
				<th>Descripción</th>
				<th>Stock Total</th>
				<th>Acciones</th>
			</tr>
		</thead>
		<tbody class="align-middle">
			{% for categoria in categorias %}
				<tr>
					<td>{{ categoria.nombre }}</td>
					<td>{{ categoria.descripcion }}</td>
					<td>{{ stockPorCategoria[categoria.id] ?? 0 }}</td>
					<td class="d-flex gap-1">
						<a href="{{ path('app_categoria_show', {'id': categoria.id}) }}" class="btn btn-dark btn-sm">Mostrar</a>
						<a href="{{ path('app_categoria_edit', {'id': categoria.id}) }}" class="btn btn-secondary btn-sm">Editar</a>
						{{ include('categoria/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">No hay categorías creadas.</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>



{% endblock %}
