{% extends 'base.html.twig' %}

{% block title %}Hello InventarioController!
{% endblock %}

{% block contenido %}

<section>
    <div class="container py-4">
        <div class="row">
            <div class="col-12 mb-4">
                <h1 class="h3 text-center text-lg-start">Bienvenido al inventario</h1>
                <p class="text-center text-lg-start">
                    Esta es la secci√≥n de inventario donde puedes gestionar tus productos.
                </p>
            </div>

            <div class="col-12">
                <!-- Contenedor responsivo -->
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Nombre</th>
                                <th>Descripcion</th>
                                <th>Precio</th>
                                <th>Stock</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for producto in productos %}
                                <tr>
                                    <!--<td>{{ producto.id }}</td>-->
                                    <td>{{ producto.nombre }}</td>
                                    <td>{{ producto.descripcion }}</td>
                                    <td>{{ producto.precioVenta }}</td>
                                    <td>{{ producto.stock }}</td>
                                    <td>
                                        <a href="{{ path('app_producto_show', {'id': producto.id}) }}" class="btn btn-sm btn-info">Ver</a>
                                        <a href="{{ path('app_producto_edit', {'id': producto.id}) }}" class="btn btn-sm btn-warning">Editar</a>
                                        {% include 'producto/_delete_form.html.twig' with {'producto': producto} %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center">No hay productos registrados</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
