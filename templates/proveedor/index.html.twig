{% extends 'base.html.twig' %}

{% block title %}Proveedores{% endblock %}

{% block contenido %}
<div class="container py-4">
  <div class="d-flex align-items-center mb-4">
    <div>
      <h1 class="h3 mb-0">Proveedores</h1>
      <p class="text-muted mb-0">Gestión de proveedores registrados</p>
    </div>
    <div class="ms-auto">
      <a href="{{ path('app_proveedor_new') }}" class="btn btn-primary me-2">
        <i class="bi bi-plus-circle me-1"></i> Agregar nuevo
      </a>
      <a href="#" class="btn btn-outline-secondary" id="btn-export">
        <i class="bi bi-download me-1"></i> Descargar
      </a>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <div class="row mb-3">
        
        <div class="col-md-6 text-end">
          <small class="text-muted">Mostrando {{ proveedors|length }} proveedores</small>
        </div>
      </div>

      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>Nombre</th>
              <th>Teléfono</th>
              <th>Email</th>
              <th>Dirección</th>
              <th class="text-end">Acciones</th>
            </tr>
          </thead>
          <tbody id="proveedor-table-body">
            {% for proveedor in proveedors %}
              <tr>
                <td class="fw-semibold">{{ proveedor.nombre }}</td>
                <td>{{ proveedor.telefono ?: '—' }}</td>
                <td>{{ proveedor.email ?: '—' }}</td>
                <td>{{ proveedor.direccion ?: '—' }}</td>
                <td class="text-end">
                  <a href="{{ path('app_proveedor_show', {'id': proveedor.id}) }}" class="btn btn-sm btn-outline-info me-1" title="Mostrar">
                    <i class="bi bi-eye"></i>
                  </a>
                  <a href="{{ path('app_proveedor_edit', {'id': proveedor.id}) }}" class="btn btn-sm btn-outline-warning me-1" title="Editar">
                    <i class="bi bi-pencil"></i>
                  </a>
                  {# Si tienes ruta de borrado, reemplaza '#' por path('app_proveedor_delete', {'id': proveedor.id}) y usa un form con method POST/DELETE #}
                  <button type="button" class="btn btn-sm btn-outline-danger" onclick="if(confirm('¿Borrar proveedor {{ proveedor.nombre }}?')){ /* enviar formulario de borrado */ }" title="Eliminar">
                    <i class="bi bi-trash"></i>
                  </button>
                </td>
              </tr>
            {% else %}
              <tr>
                <td colspan="5" class="text-center py-4">
                  <div class="text-muted">No hay proveedores registrados.</div>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script>
    // Filtrado simple del listado en el cliente
    (function(){
      const input = document.getElementById('filter-proveedores');
      const tbody = document.getElementById('proveedor-table-body');
      if(!input || !tbody) return;
      input.addEventListener('input', function(){
        const q = this.value.trim().toLowerCase();
        Array.from(tbody.rows).forEach(row => {
          const text = row.innerText.toLowerCase();
          row.style.display = q === '' || text.indexOf(q) !== -1 ? '' : 'none';
        });
      });
      // ejemplo: prevenir acción por defecto del botón Descargar
      const btnExport = document.getElementById('btn-export');
      if(btnExport) btnExport.addEventListener('click', e => { e.preventDefault(); alert('Función de descarga no implementada'); });
    })();
  </script>
{% endblock %}
