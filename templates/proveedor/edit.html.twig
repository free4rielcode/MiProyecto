{% extends 'base.html.twig' %}

{% block title %}Edit Proveedor
{% endblock %}
{% block contenido %}
	<form method="post">
		{{ form_start(form) }}
		{{ form_errors(form) }}

		<div class="container mt-3 mb-3">

            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

			<div class="row">


				<div class="col-8 offset-2 ">
					<div class="wrapper_proveedor">


						<div class="titulo">
							<h1>Editar Proveedor</h1>
						</div>

						<div class="input-box ">
							{{ form_row(form.nombre) }}
						</div>
						<div class="input-box">
							{{ form_row(form.direccion) }}
						</div>
						<div class="input-box">
							{{ form_row(form.telefono) }}
						</div>
						<div class="input-box">
							{{ form_row(form.email) }}
						</div>


					
                        <div class="boton_prov d-inline-block">
                            {{ include('proveedor/_form.html.twig', {'button_label': 'Actualizar'}) }}
                        </div>
                        <div class="boton_prov d-inline-block">
                            {{ include('proveedor/_delete_form.html.twig') }}
                        </div>


					</div>

				</div>
                

			</div>

		</div>
		{{ form_end(form) }}
	</form>


	<a href="{{ path('app_proveedor_index') }}" class="btn btn-primary m-2 text-light">Volver atr√°s</a>

	

{% endblock %}
