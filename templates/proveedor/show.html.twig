{% extends 'base.html.twig' %}

{% block title %}Proveedor
{% endblock %}

{% block contenido %}


	<div class="container mt-5 mb-5">


		<div class="row">


			<div class="col-8 offset-2 ">
				<div class="wrapper_proveedor">


					<table class="table">
						<tbody>
							<tr>
								<th>Id</th>
								<td>{{ proveedor.id }}</td>
							</tr>
							<tr>
								<th>Nombre</th>
								<td>{{ proveedor.nombre }}</td>
							</tr>
							<tr>
								<th>Telefono</th>
								<td>{{ proveedor.telefono }}</td>
							</tr>
							<tr>
								<th>Email</th>
								<td>{{ proveedor.email }}</td>
							</tr>
							<tr>
								<th>Direccion</th>
								<td>{{ proveedor.direccion }}</td>
							</tr>

						</tbody>
					</table>


					<div class="boton_prov d-inline-block">
						<a href="{{ path('app_proveedor_edit', {'id': proveedor.id}) }}"class="boton_prov">Editar</a>
					</div>

					<div class="boton_prov d-inline-block">
						{{ include('proveedor/_delete_form.html.twig') }}
					</div>


				</div>

			</div>


		</div>

	</div>


	<a href="{{ path('app_proveedor_index') }}" class="btn btn-primary m-1 text-light">Volver Atras</a>


{% endblock %}
