{% extends 'base.html.twig' %}

{% block title %}Categoria{% endblock %}
{% block contenido %}
<div class="titulo"><h1>{{ categoria.nombre }}</h1></div>
	

    <table class="table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categoria.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ categoria.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ categoria.descripcion }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Productos en esta Categoría</h2>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio Compra</th>
                <th>Precio Venta</th>
                <th>Stock</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for producto in productos %}
                <tr>
                    <td>{{ producto.nombre }}</td>
                    <td>{{ producto.descripcion }}</td>
                    <td>{{ producto.precio }}</td>
                    <td>{{ producto.precioVenta }}</td>
                    <td>{{ producto.stock }}</td>
                    <td>
                        <a href="{{ path('app_producto_show', {'id': producto.id}) }}" class="btn btn-info btn-sm">Mostrar</a>
                        <a href="{{ path('app_producto_edit', {'id': producto.id}) }}" class="btn btn-warning btn-sm">Editar</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">No hay productos en esta categoría.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_producto_index') }}" class="btn btn-info btn-sm">Volver</a>

    <a href="{{ path('app_categoria_edit', {'id': categoria.id}) }}" class="btn btn-warning btn-sm">Editar</a>

    {{ include('categoria/_delete_form.html.twig') }}

{% endblock %}
