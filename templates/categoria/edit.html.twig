{% extends 'base.html.twig' %}

{% block title %}Editar categoría{% endblock %}

{% block contenido %}
<div class="container mt-4">
    {# Mensajes flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card shadow-sm">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0"><i class="bi bi-tags me-2"></i> Editar categoría</h5>
                    <a href="{{ path('app_producto_index') }}" class="btn btn-outline-success btn-sm">
                        <i class="bi bi-arrow-left-circle me-1"></i> Volver
                    </a>
                </div>

                <div class="card-body">
                    
                    {{ include('categoria/_form.html.twig', {'button_label': 'Actualizar'}) }}

                    <div class="d-flex justify-content-between mt-3">
                        <a href="{{ path('app_producto_index') }}" class="btn btn-light">
                            <i class="bi bi-x-lg me-1"></i> Cancelar
                        </a>

                        {# include del formulario de borrado (si existe) #}
                        {{ include('categoria/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
