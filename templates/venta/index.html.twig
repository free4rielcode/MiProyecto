{% extends 'base.html.twig' %}

{% block title %}Listado de Ventas
{% endblock %}

{% block contenido %}

<div class="container py-4">
    <!-- Encabezado -->
    <div class="row mb-3">
        <div class="col-12 d-flex flex-column flex-lg-row justify-content-between align-items-center">
            <h1 class="h3 mb-2 mb-lg-0 text-center text-lg-start">ðŸ“Š Listado de Ventas</h1>
            <a href="{{ path('venta_nueva') }}" class="btn btn-success btn-sm">
                âž• Registrar nueva venta
            </a>
        </div>
    </div>

    <!-- Vista tipo cards -->
    <div class="row">
        {% for venta in ventas %}
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-dark text-white">
                        Fecha: {{ venta.fecha|date('d/m/Y H:i', 'America/La_Paz') }}
                    </div>
                    <div class="card-body">
                        <p><strong>Total:</strong> <span class="fw-bold text-primary">{{ venta.total }}</span></p>
                        <p><strong>Usuario:</strong> {{ venta.usuario.email }}</p>
                        <hr>
                        <h6 class="fw-bold">Detalles:</h6>
                        <ul class="list-unstyled mb-0">
                            {% for detalle in venta.detalles %}
                                <li class="mb-2 p-2 border rounded bg-light">
                                    <strong>Producto:</strong> {{ detalle.producto.nombre }} <br>
                                    <strong>Cantidad:</strong> {{ detalle.cantidad }} <br>
                                    <strong>Precio unitario:</strong> {{ detalle.precioUnitario }} <br>
                                    <strong>Subtotal:</strong> {{ detalle.subtotal }}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-warning text-center">
                    No hay ventas registradas.
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}