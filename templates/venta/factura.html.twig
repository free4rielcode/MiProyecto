{% extends 'base.html.twig' %}

{% block title %}Factura de Venta{% endblock %}

{% block contenido %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <img src="{{ asset('recursos/img/logo.svg') }}" alt="Logo" style="height: 50px; margin-bottom: 10px;">
                    <h2>Moto Repuestos Bibosi</h2>
                    <p class="mb-0">Factura de Venta</p>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>Fecha:</strong> {{ venta.fecha|date('d/m/Y H:i') }}<br>
                            <strong>Vendedor:</strong> {{ venta.usuario.email }}
                        </div>
                        <div class="col-6 text-end">
                            <strong>NÂ° Factura:</strong> {{ venta.id }}
                        </div>
                    </div>

                    <table class="table table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Precio Unitario</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for detalle in venta.detalles %}
                            <tr>
                                <td>{{ detalle.producto.nombre }}</td>
                                <td>{{ detalle.cantidad }}</td>
                                <td>Bs {{ detalle.precioUnitario|number_format(2, ',', '.') }}</td>
                                <td>Bs {{ detalle.subtotal|number_format(2, ',', '.') }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                <td><strong>Bs {{ venta.total|number_format(2, ',', '.') }}</strong></td>
                            </tr>
                        </tfoot>
                    </table>

                    <div class="text-center mt-4 no-print">
                        <button onclick="window.print()" class="btn btn-primary me-2">
                            <i class="fas fa-print"></i> Imprimir Factura
                        </button>
                        <a href="{{ path('venta_factura_pdf', {'id': venta.id}) }}" class="btn btn-success me-2">
                            <i class="fas fa-download"></i> Descargar PDF
                        </a>
                        <a href="{{ path('app_venta') }}" class="btn btn-secondary">Volver</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
