{% extends 'base.html.twig' %}

{% block title %}Inicio de sesion{% endblock %}


{% block body %}
<form method="post">
    <div class="container py-5">
        <div class="row align-items-center">
            
            <!-- Logo -->
            <div class="col-12 col-lg-6 text-center mb-4 mb-lg-0">
                <div class="logo">
                    <img src="{{ asset('recursos/img/logo_f.svg') }}" 
                         alt="Imagen de fondo" 
                         class="img-fluid">
                </div>
            </div>

            <!-- Formulario -->
            <div class="col-12 col-lg-6">
                <div class="wrapper">
                    
                    <h1 class="h3 fs-3 fs-xl-1 mb-3 text-center">Inicio de Sesión</h1>
                    
                    <p class="text-center mb-4">¡Bienvenido de nuevo! Ingresa tus datos</p>


                    <!-- Usuario -->
                    <div class="input-box mb-3">
                        <label for="username">Nombre de Usuario</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" 
                               class="form-control" autocomplete="email" required autofocus 
                               placeholder="Ingresa tu nombre de usuario">
                    </div>

                    <!-- Contraseña -->
                    <div class="input-box mb-3">
                        <label for="password">Contraseña</label>
                        <input type="password" name="_password" id="password" 
                               class="form-control" autocomplete="current-password" required 
                               placeholder="Ingresa tu contraseña">
                    </div>

                    <!-- Botón ingresar -->
                    <div class="boton_login1 d-grid">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button class="btn btn-lg btn-primary" type="submit">
                            <p class="ingreso">Ingresar</p>
                        </button>
                    </div>

                    <!-- Botón crear cuenta -->
                    <div class="boton_login2 d-grid">
                        <button type="button" class="btn btn-lg btn-primary">
                            <a href="{{ path('app_register') }}" class="ingreso">Crear una cuenta</a>
                        </button>
                    </div>

                    <!-- Error -->
                    {% if error %}
                        <div class="alert alert-danger mt-3">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</form>
{% endblock %}

