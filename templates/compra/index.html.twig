{% extends 'base.html.twig' %}

{% block title %}
	Compras
{% endblock %}


{% block contenido %}

<div class="container py-4">
    <!-- Encabezado -->
    <div class="row lista_prov mb-3">
        <div class="col-12 d-flex flex-column flex-lg-row justify-content-between align-items-center">
            <h1 class="h3 mb-2 mb-lg-0 text-center text-lg-start">ðŸ›’ Lista de Compras</h1>
            <a href="{{ path('compra_nueva') }}" class="btn btn-success btn-sm">
                âž• Crear nueva compra
            </a>
        </div>
    </div>

    <!-- Tabla responsiva -->
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Fecha</th>
                    <th>Total</th>
                    <th>Usuario</th>
                    <th>Detalles</th>
                </tr>
            </thead>
            <tbody>
                {% for compra in compras %}
                    <tr>
                        <td>{{ compra.fecha|date('d/m/Y H:i') }}</td>
                        <td><span class="fw-bold text-primary">{{ compra.total }}</span></td>
                        <td>{{ compra.usuario.email }}</td>
                        <td>
                            <ul class="list-unstyled mb-0">
                                {% for detalle in compra.detalleCompras %}
                                    <li class="mb-2 p-2 border rounded bg-light">
                                        <strong>Categoria:</strong> {{ detalle.categoria.nombre }} <br>
                                        <strong>Cantidad:</strong> {{ detalle.cantidad }} <br>
                                        <strong>Precio unitario:</strong> {{ detalle.precioUnitario }} <br>
                                        <strong>Subtotal:</strong> {{ detalle.subtotal }}
                                    </li>
                                {% endfor %}
                            </ul>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center text-muted">
                            No hay compras registradas.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
